---
import NavButtons from "./NavButtons.astro";
---

<header class="flex items-center text-white bg-[rgba(0,0,0,0.6)] backdrop-blur-[8px] fixed top-0 left-0 w-full h-[55px] z-[1000]">
    <div class="nav-buttons">
        <NavButtons/>
    </div>
    <div class="title">
        <a href="/">BAN GAME STUDIOS</a>
    </div>
    <a href="/launcher" class="download-button">
        <span class="icon">Ban Game Launcher</span>
    </a>

    <div class="hamburger" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </div>
</header>

<div class="menu" id="menu">
    <NavButtons/>
</div>

<style>
    .nav-buttons {
        display: flex;
        gap: 20px;
        padding-left: 20px;
        @apply max-[960px]:hidden
    }

    .title a {
        display: flex;
        font-size: 1.5em;
        font-weight: bold;
        text-align: center;
        justify-content: center;
        text-decoration: none;
        color: #fff;
        position: absolute;
        transition: color 0.3s ease;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        @apply max-[720px]:hidden
    }

    .title a:hover {
        color: #ccc;
    }

    .download-button {
        display: flex;
        position: absolute;
        right: 0;
        align-items: center;
        padding: 0px 15px 2px;
        background-color: #333;
        border-radius: 20px;
        text-decoration: none;
        color: #fff;
        border: 2px solid transparent;
        transition: background 0.3s ease, border 0.3s ease;
        margin-right: 8px;
    }

    .download-button:hover {
        background-color: #222222;
        border: 2px solid #fff;
    }

    .icon {
        font-size: 1.1em;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
        margin-left: 20px;
        margin-top: 5px;
        z-index: 1001;
        position: relative;
        width: 30px;
        height: 25px;
        @apply max-[960px]:flex
    }

    .hamburger span {
        display: block;
        width: 30px;
        height: 3px;
        background-color: #fff;
        border-radius: 3px;
        transition: transform 0.3s ease-in-out, opacity 0.15s ease-in-out; /* Diferente duración para la opacidad */
    }

    /* Animación para convertir el botón en "X" */
    .hamburger.open span:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .hamburger.open span:nth-child(2) {
        opacity: 0;
        transition: opacity 0.1s ease-in-out; /* Desaparece más rápido */
    }

    .hamburger.open span:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

    .hamburger:hover span {
        background-color: #ccc;
    }

    .menu {
        position: fixed;
        top: 50px;
        left: 0;
        width: 100%;
        height: calc(100% - 35px);
        background-color: rgba(0, 0, 0, 0.9);
        color: #fff;
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 20px;
        z-index: 999;
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
    }

    .menu.open {
        transform: translateX(0);
    }
</style>

<script>
    const hamburger = document.getElementById("hamburger");
    const menu = document.getElementById("menu");

    if (hamburger != null) {
        hamburger.addEventListener("click", toggleMenu);
        window.addEventListener("resize", handleResize);

        document.addEventListener('astro:after-swap', () => {
            hamburger.addEventListener("click", toggleMenu);
            window.addEventListener("resize", handleResize);
        });
    }

    function toggleMenu() {
        if (menu == null || hamburger == null) return;

        menu.classList.toggle("open");
        hamburger.classList.toggle("open");
    }

    function handleResize() {
        if (window.innerWidth >= 960) {
            if (menu == null || hamburger == null) return;

            menu.classList.remove("open");
            hamburger.classList.remove("open");
        }
    }
</script>