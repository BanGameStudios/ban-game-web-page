---
const currentPath = Astro.url.pathname;

const sections = [
    {
        label: 'Inicio',
        href: '/',
    },
    {
        label: 'Proyectos',
        href: '/proyectos/',
        desc: "Proyectos (eventos y series) que hemos realizado."
    },
    {
        label: 'Staff',
        href: '/staff/',
        desc: 'Equipo de Ban Game Studios.'
    },
    {
        label: 'Contacto',
        href: 'https://forms.gle/Vk2Grabxz814EiZ58',
    }
];
---

{
    sections.map(section => (
        <a href={section.href} title={section.desc} class={`text-[1.1em] transition-colors duration-300 ease hover:text-[#ccc] ${currentPath === section.href ? "text-[#7b7b7b] font-bold" : ""}`}>
            {section.label}
        </a>
    ))
}