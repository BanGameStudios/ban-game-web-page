---
import { networks } from '../../data/networks'
---

<div class="flex flex-wrap gap-[28px] pt-4 justify-center">
    {
        networks.map((network) => (
            <a href={network.href} target="_blank">
                <img 
                    class="w-[24px] h-[24px] transition-opacity duration-300 ease-in hover:opacity-[0.7] object-contain"
                    src={`/icons/${network.icon}`} 
                    alt={network.alt}
                />
            </a>
        ))
    }
</div>