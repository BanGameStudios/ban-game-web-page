---
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { getAllProjects } from "../libs/firestore/projects";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const rawProjects = await getAllProjects(Astro.url.pathname.split("/")[1]);

const projectPictures = await Promise.all(
  rawProjects.map(async (project) => {  
      const image = await import(`../assets/projects/${project.slug}.webp`);
      return { ...project, avatar: image.default };
  })
);
