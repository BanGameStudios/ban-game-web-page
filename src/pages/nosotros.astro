    <Banner src="banner4"/>
    <MainPage class="mb-10">
        <section id="about" class="flex flex-col justify-center items-center">
            <Title>Sobre Nosotros</Title>
            <div class="px-4 mt-4 max-w-[800px] prose prose-invert text-left">
                <Content/>
            </div>
        </section>
    </MainPage>
</Layout>