---
import Title from "../components/Title.astro";
import { redirects } from "../data/redirects";
import Layout from "../layouts/Layout.astro";

export async function getStaticPaths() {
    return redirects.map((redirect) => ({
        params: {id: redirect.id },
        props: { redirect }
    }))
}

const { redirect } = Astro.props
const { id, url } = redirect
---

<head>
    <meta http-equiv="refresh" content={`0; url=${url}`} />
</head>

<Layout title="Discord" desc="Discord de la comunidad de Ban Game Studios.">
    <div class="flex flex-col items-center justify-center center pt-[220px] pb-[220px]">
        <Title>Redirigiendo...</Title>
        <p class="mt-[10px] text-[1rem] text-[darkgrey] max-w-[600px]">Redirigiendo, por favor espere...</p>
    </div>
</Layout>