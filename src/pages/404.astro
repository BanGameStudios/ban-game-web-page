---
import Layout from "../layouts/Layout.astro";

const isNotFound = true;
---

<Layout title="404">
    <div class="flex flex-col items-center justify-center center pt-[180px] pb-[180px]">
        <h1 class="text-[44px] font-bold p-0 m-0 mb-[5px]">404</h1>
        <p class="text-[32px] font-bold p-0 m-0 mb-[15px]">Pagina no encontrada</p>
        <p class="text-[16px] text-[darkgrey] p-0 m-0">Parece que te has perdido. Volver a <a class="no-underline text-white transition-colors duration-300 ease-in hover:text-[darkgrey]" href="/">inicio</a>.</p>
    </div>
</Layout>

